/* UROSYSTEM globals */
:root {
  --white: #fff;
  --dark-blue: #072c3f;
  --mid-blue: #0b3b54;
  --light-blue: #52b2d6;
  /*--pale-blue: #c7e1f0;*/
  --pale-blue: hsl(202deg 58% 92%);
  --dark-blue-75: #072c3fc0;
  --mid-blue-75: #0b3b54c0;
  --light-blue-75: #52b2d6c0;
  --pale-blue-75: #c7e1f0c0;
  --grad-pale-blue: linear-gradient(224deg, var(--pale-blue), var(--light-blue));
  --grad-light-blue: linear-gradient(302deg, var(--light-blue), var(--mid-blue));
  --grad-dark-blue: linear-gradient(302deg, var(--mid-blue), var(--dark-blue));
  --grad-dark-blue-75: linear-gradient(302deg, var(--mid-blue-75), var(--dark-blue-75));
  --grad-light-blue-75: linear-gradient(302deg, var(--light-blue-75), var(--mid-blue-75));
  --grad-radial-dark: radial-gradient(var(--mid-blue-75), var(--dark-blue));

  --half: calc(var(--rem) / 2);
  --halfgap: calc(var(--rem) * .75);
  --gap: calc(1.5 * var(--rem));
  --gap2: calc(3 * var(--rem));
  --gap4: calc(8 * var(--rem));

  --sides: max(12.5vw - 5rem, .5rem);

  --marker: url(/uploads/open-right.svg);
  --marker-down: url(/uploads/open-down.svg);

  font-family: 'Josefin Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif; /* 1 */
  line-height: 1.5;
  font-size: 1rem;

  /*--base-font-size: 12px;
  --fluid-typography-ratio: 0.334;
  --rem: calc(var(--base-font-size) + var(--fluid-typography-ratio) * 1vw);*/
  --user-font-scale: 1rem - 16px;
  /*--rem: clamp(0.875rem, 0.4626rem + 1.0309vw + var(--user-font-scale), 1.125rem);*/
  --rem: clamp(0.875rem, 0.4626rem + 0.9309vw + var(--user-font-scale), 1.125rem);

  font-size: var(--rem);
}

