article li > a:first-child {
  text-decoration: none;
  display: block;
  flex-basis: 100%;
  border-bottom: 2px solid;
  border-color: var(--pale-blue);
  margin-bottom: 1.5rem;
  position: relative;
  padding-inline-end: 1.5rem;
  /*margin-right: 1.5rem;*/
}
article li > a:first-child::after {
  content: '';
  position: absolute;
  inset-inline-end: 0;
  bottom: .25rem;
  width: 1.5rem;
  height: 1.5rem;
  filter:invert();
  background-image: var(--marker);
  background-repeat: no-repeat;
  background-size: cover;
}
[dir='rtl'] article li > a:first-child::after {
  transform: rotate(180deg);
}
article li > a:hover {
  /*text-decoration: underline;*/
  border-color: var(--white);
}

